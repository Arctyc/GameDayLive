{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "gamedaylive",
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "permissions": {
    "reddit": true,
    "redis": true,
    "http": {
      "enable": true,
      "domains": [
        "api-web.nhle.com"
      ]
    }
  },
  "menu": {
    "items": [
      {
        "label": "GameDayLive",
        "description": "Configure GameDayLive settings",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/config-menu"
      },
      {
        "label": "GameDayLive Schedule",
        "description": "View/cancel scheduled jobs",
        "forUserType": "moderator",
        "location": "subreddit",
        "endpoint": "/internal/menu/scheduled-jobs"
      }
    ]
  },
  "forms": {
    "subredditConfigForm": "/internal/form/config-form",
    "cancelJobForm": "/internal/form/cancel-job-form"
  },
  "scheduler": {
    "tasks": {
      "daily-game-check": {
        "endpoint": "/internal/scheduler/daily-game-check",
        "data": {
          "jobTitle": "Daily Game Check (reinstall to restart)"
        },
        "cron": "0 8 * * * "
      },
      "create-game-thread": {
        "endpoint": "/internal/scheduler/create-game-thread"
      },
      "create-postgame-thread": {
        "endpoint": "/internal/scheduler/create-postgame-thread"
      },
      "next-live-update": {
        "endpoint": "/internal/scheduler/next-live-update"
      }
    }
  },
  "triggers": {
    "onAppInstall": "/internal/triggers/install",
    "onAppUpgrade": "/internal/triggers/upgrade",
    "onPostDelete": "/internal/triggers/delete-post"
  },
  "dev": {
    "subreddit": "gamedaylive_dev"
  }
}