{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "gamedaylive",

  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },

  "permissions": 
    {
      "reddit": true,
      "redis": true,
      "http": {
        "enable": true,
        "domains": [
          "api-web.nhle.com"
        ]
      }
    },

  "menu": {
    "items": [
      {
        "label": "GameDayLive",
        "description": "Configure GameDayLive settings",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/config-menu"
      }
    ]
  },

  "forms": {
    "subredditConfigForm": "/internal/form/config-form"
  },

  "scheduler": {
    "tasks": {
      "daily-game-check": {
        "endpoint": "/internal/scheduler/daily-game-check",
        "cron": "0 8 * * * "
      },
      "create-game-thread": {
        "endpoint": "/internal/scheduler/create-game-thread"
      },
      "next-live-update": {
        "endpoint": "/internal/scheduler/next-live-update"
      }
    }
  }
}